<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/fast_dp_8"
        android:orientation="horizontal"
        android:baselineAligned="false">

    <EditText
            android:id="@+id/edit_text"
            android:layout_marginEnd="@dimen/fast_dp_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    <ImageButton
            android:id="@+id/button"
            android:layout_width="@dimen/fast_dp_48"
            android:layout_height="@dimen/fast_dp_48"
            android:background="@drawable/fast_selectable_item_background"
            android:src="@drawable/fast_renderer_ic_numeric" />
</LinearLayout>
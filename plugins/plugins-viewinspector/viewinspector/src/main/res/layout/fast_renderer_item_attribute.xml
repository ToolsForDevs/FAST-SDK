<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:baselineAligned="false"
              android:layout_width="match_parent"
              android:layout_height="48dp">

    <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="horizontal"
            android:baselineAligned="false">

        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/fast_dp_8"
                android:paddingEnd="@dimen/fast_dp_8"
                tools:text="Padding Left"/>

        <LinearLayout
                android:id="@+id/icons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:divider="@drawable/fast_renderer_transparent_divider"
                android:showDividers="middle"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/deprecated_api"
                    android:layout_width="@dimen/fast_dp_16"
                    android:layout_height="@dimen/fast_dp_16"
                    android:textColor="@color/fast_md_white_100"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/fast_dp_8"
                    tools:text="M"
                    android:background="@drawable/fast_renderer_deprecated_api"/>

            <TextView
                    android:id="@+id/new_api"
                    android:layout_width="@dimen/fast_dp_16"
                    android:layout_height="@dimen/fast_dp_16"
                    android:layout_marginEnd="@dimen/fast_dp_8"
                    android:textColor="@color/fast_md_white_100"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="10sp"
                    android:gravity="center"
                    tools:text="Q"
                    android:background="@drawable/fast_renderer_new_api"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

    <com.toolsfordevs.fast.core.ui.seekbar.TickSeekBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:tsb_min="0"
            app:tsb_max="256"
            app:tsb_show_thumb_text="above"
            app:tsb_tick_texts_color="@color/fast_md_black_100"
            app:tsb_track_progress_color="@color/fast_md_black_100"
            app:tsb_thumb_text_color="@color/fast_md_black_100"
            app:tsb_thumb_color="@color/fast_primary_color"
            app:tsb_only_thumb_draggable="true"/>

    <ImageButton
            android:id="@+id/button"
            android:layout_width="@dimen/fast_dp_48"
            android:layout_height="@dimen/fast_dp_48"
            android:background="@drawable/fast_selectable_item_background"
            android:src="@drawable/fast_renderer_ic_numeric" />
</LinearLayout>